@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <!-- Main heading and description -->
    <h1 class="display-4">Internal Booking System</h1>
    <p>Book internal resources easily.</p>

    <!-- Action buttons for quick navigation -->
    <div class="mt-5">
        <a asp-controller="Resources" asp-action="Index" class="btn btn-primary btn-lg m-2">View Resources</a>
        <a asp-controller="Bookings" asp-action="Create" class="btn btn-success btn-lg m-2">Make a Booking</a>
        <a asp-controller="Bookings" asp-action="Index" class="btn btn-info btn-lg m-2">View All Bookings</a>
    </div>

    <!-- Stats Section -->
    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📊 System Stats</h4>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h5 class="text-primary">@ViewBag.TotalResources</h5>
                                <p class="mb-0">Total Resources</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h5 class="text-success">@ViewBag.AvailableResources</h5>
                                <p class="mb-0">Available Now</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h5 class="text-warning">@ViewBag.TotalBookings</h5>
                                <p class="mb-0">Active Bookings</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h5 class="text-info">@ViewBag.TodayBookings</h5>
                                <p class="mb-0">Bookings Today</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
