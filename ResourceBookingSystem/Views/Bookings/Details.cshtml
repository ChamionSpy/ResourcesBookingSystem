@model ResourceBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h4>Booking Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Resource:</dt>
            <dd class="col-sm-9">@Model.Resource?.Name</dd>

            <dt class="col-sm-3">Start Time:</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("g")</dd>

            <dt class="col-sm-3">End Time:</dt>
            <dd class="col-sm-9">@Model.EndTime.ToString("g")</dd>

            <dt class="col-sm-3">Duration:</dt>
            <dd class="col-sm-9">@((Model.EndTime - Model.StartTime).Hours) hours @((Model.EndTime - Model.StartTime).Minutes) minutes</dd>

            <dt class="col-sm-3">Booked By:</dt>
            <dd class="col-sm-9">@Model.BookedBy</dd>

            <dt class="col-sm-3">Purpose:</dt>
            <dd class="col-sm-9">@Model.Purpose</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                @if (Model.Status == "Active")
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Canceled</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    @if (Model.Status == "Active")
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Booking</a>
        <a asp-action="Cancel" asp-route-id="@Model.Id" class="btn btn-danger">Cancel Booking</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>